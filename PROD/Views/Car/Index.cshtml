
@model IEnumerable<PROD.Models.CarModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top:95px;font-size:25px">
    Car List || @Html.ActionLink("Customer List", "EmpIndex", null, new { @class = "btn btn-primary btn-large" })
</h2>    

<br /><br />

<style>
    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
  
</style>
<p style="margin-top:-30px">
    @Html.ActionLink("Add Car", "Create", null, new { @class = "btn btn-primary btn-large" })

</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4 ">
            <div class="card">
                <img class="card-img-top" src="@Url.Content(@ViewBag.ImagePath + item.Photo)" alt="Card image">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.CarName)</h5>
                    <p class="card-text">
                        Available: @Html.DisplayFor(modelItem => item.Available) <br />
                        Per Day Charge: @Html.DisplayFor(modelItem => item.PerDayCharge) <br />
                        Charge Per Km: @Html.DisplayFor(modelItem => item.ChargePerKm) <br />
                        Car Type: @Html.DisplayFor(modelItem => item.CarType) <br />
                    </p>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Edit", "Edit", new { id = item.CarID }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.CarID }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.CarID }, new { @class = "btn btn-danger btn-sm" })
                </div>
            </div>
        </div>
    }
</div>
