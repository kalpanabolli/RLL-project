@model IEnumerable<PROD.Models.CustomerModel>

@{
    ViewBag.Title = "EmpIndex";
}

<h2 style="margin-top:95px;font-size:25px">
    Customer List || @Html.ActionLink("Car List", "Index", null, new { @class = "btn btn-primary btn-large" })

</h2>




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoyaltyPoints)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoyaltyPoints)
            </td>
            <td>
                @Html.ActionLink("OrderedRentals", "OrderedRentals", new { id = item.CustomerID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
