@model PROD.Models.RentModel

@{
    ViewBag.Title = "RentNow";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RentNow</title>
</head>
<body>
    <h2>Rent Now</h2>
    <div style="float:left;text-align:left;width:700px">
        @using (Html.BeginForm())
